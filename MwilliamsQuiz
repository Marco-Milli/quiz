               }
               else if ( rb[3].isSelected())
               {
                 ans[7] =rb[3].getText();
               }
            }
            
             if(current == 9){
                 
                 if ( rb[0].isSelected())
               {
                  ans[8] =rb[0].getText();
                 
                }
               else if ( rb[1].isSelected())
               {
                 ans[8] =rb[1].getText();
                 
               }
               else if ( rb[2].isSelected())
               {
                ans[8] =rb[2].getText();
               
               }
               else if ( rb[3].isSelected())
               {
                ans[8] =rb[3].getText();
                
               }
               
                button.setEnabled(true);
                   button.setText("Result");
                   
